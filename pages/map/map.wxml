<map id="map"
	longitude="{{position.longitude}}" latitude="{{position.latitude}}" scale="18" show-location wx:if="{{map}}" style="width: {{mapSize.width}}px; height: {{mapSize.height - 56}}px;"
	controls="{{controls}}" markers="{{markers}}" bindcontroltap="controltap" bindmarkertap="markertap">
</map>
<view class="btn-area">
	<navigator hover-class="active" class="now">
		<view class="icon-map"></view>
		<view class="text">地图</view>
	</navigator>
	<navigator hover-class="active" url="/pages/explore/explore" open-type="reLaunch">
		<view class="icon-explore"></view>
		<view class="text">广场</view>
	</navigator>
	<navigator hover-class="active" url="/pages/heart/heart" open-type="reLaunch">
		<view class="icon-heartbeat"></view>
		<view class="text">表白</view>
	</navigator>
