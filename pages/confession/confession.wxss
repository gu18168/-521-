.bg {
	position: absolute;
	top: 0;
	height: 0;
	width: 100%;
	height: 100vh;
	background: linear-gradient(180deg,#4579D4,#70CBE1);
}

.card {
	position: absolute;
	background: #fff;
	top: 80rpx;
	left: 67.5rpx;
	width: 82%;
	height: 76%;
	border-radius: 3px;
}

.card-header {
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	width: 100%;
	height: 33%;
	background-color: #F47A9B;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	padding: 40rpx;
	box-sizing: border-box;
	transition: all .5s ease;
}

.card-header input{
	color: #fff;
	font-size: 50rpx;
	font-weight: 700;
}

.card-header text {
	color: #fff;
	font-size: 30rpx;
	margin-top: 20rpx;
}

.card-content {
	display: flex;
	flex-direction: column;
	height: 55%;
	padding: 40rpx;
	box-sizing: border-box;
}

textarea {
	flex: 1;
	width: 100%;
	color: #000;
	margin: 20rpx 0;
}

.d-line {
	width: 12%;
	height: 8rpx;
	background-color: #F46D90;
	transition: all .5s ease;
}

.card-footer {
	display: flex;
	height: 12%;
	box-shadow: 0 1px 2px rgba(150,150,150,.5);
}

.card-footer .color-wrapper {
	flex: 1;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
}

.color-wrapper .color {
	width: 20%;
	height: 0;
	color: #fff;
	padding-bottom: 20%;
	border-radius: 50%;
	background-color: #000;
	display: flex;
	justify-content: center;
}

.color text {
	margin-top: 20%;
}

.color.orange {
	background-color: #ffa07a;
}

.color.pink {
	background-color: #F47A9B;
}

.color.blue {
	background-color: #54A3E5;
}

.card-footer .btn {
	display: flex;
	justify-content: center;
	align-items: center;
	color: #fff;
	width: 200rpx;
	margin: 20rpx 40rpx;
	border-radius: 100px;
	box-shadow: 0 6px 10px rgba(106,209,189,.5);
	background-color: #6AD1BD;
}

.c-line {
	background-color: rgba(255, 255, 255, .7);
	height: 16rpx;
	margin: 0 auto;
	border-bottom-right-radius: 2px;
	border-bottom-left-radius: 2px;
	width: 92%;
	box-shadow: 0 4px 8px 0 rgba(7, 17, 27, .1);
}

.wrapper {
	position: relative;
	align-items: center;
	min-height: 100vh;
	background-color: rgba(255, 255, 255, .5);
	overflow: hidden;
}

.wrapper:before, .wrapper:after {
	content: "";
	position: absolute;
	left: 50%;
	min-height: 300vw;
	min-width: 300vw;
	background: linear-gradient(0deg,#4579D4,#70CBE1);
	-webkit-animation-name: rotate;
    animation-name: rotate;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
    -webkit-animation-timing-function: linear;
    animation-timing-function: linear;
}

.wrapper:before {
	bottom: 15vh;
	border-radius: 45%;
	-webkit-animation-duration: 10s;
    animation-duration: 10s;
}

.wrapper:after {
	bottom: 12vh;
	opacity: .5;
	border-radius: 47%;
	-webkit-animation-duration: 10s;
    animation-duration: 10s;
}

@-webkit-keyframes rotate {
  0% {
    -webkit-transform: translate(-50%, 0) rotateZ(0deg);
            transform: translate(-50%, 0) rotateZ(0deg);
  }
  50% {
    -webkit-transform: translate(-50%, -2%) rotateZ(180deg);
            transform: translate(-50%, -2%) rotateZ(180deg);
  }
  100% {
    -webkit-transform: translate(-50%, 0%) rotateZ(360deg);
            transform: translate(-50%, 0%) rotateZ(360deg);
  }
}

@keyframes rotate {
  0% {
    -webkit-transform: translate(-50%, 0) rotateZ(0deg);
            transform: translate(-50%, 0) rotateZ(0deg);
  }
  50% {
    -webkit-transform: translate(-50%, -2%) rotateZ(180deg);
            transform: translate(-50%, -2%) rotateZ(180deg);
  }
  100% {
    -webkit-transform: translate(-50%, 0%) rotateZ(360deg);
            transform: translate(-50%, 0%) rotateZ(360deg);
  }
}